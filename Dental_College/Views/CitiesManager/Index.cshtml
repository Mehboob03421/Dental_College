@model IEnumerable<Dental_College.Models.Cities>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Countries)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.States)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CityName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.Countries != null)
                    {
                        @Html.DisplayFor(modelItem => item.Countries.CountryName)
                    }
                </td>
                <td>
                    @if (item.States != null)
                    {
                        @Html.DisplayFor(modelItem => item.States.StateName)
                    }
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.CityName))
                    {
                        @Html.DisplayFor(modelItem => item.CityName)
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CityCode">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CityCode">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CityCode">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>
